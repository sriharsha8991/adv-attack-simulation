# ============================================================
# Blackhat Threat Profile & Ability Generator — Environment
# ============================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# ============================================================

# ----------------------------------------------------------
# LLM Provider
# ----------------------------------------------------------
# Options: "gemini" | "groq" | "ollama"
LLM_PROVIDER=gemini

# Gemini (primary)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-3-flash-preview

# Groq (fallback — OpenAI-compatible)
GROQ_API_KEY=
GROQ_MODEL=qwen/qwen3-32b

# Ollama (local — no API key needed)
OLLAMA_MODEL=qwen3:32b
OLLAMA_BASE_URL=http://localhost:11434/v1

# ----------------------------------------------------------
# Neo4j (MITRE ATT&CK Knowledge Graph)
# ----------------------------------------------------------
NEO4J_URI=neo4j+s://<instance-id>.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j

# ----------------------------------------------------------
# Backend API (optional — for submitting abilities)
# ----------------------------------------------------------
# Set ENABLE_API_SUBMISSION=true to POST abilities to backend
ENABLE_API_SUBMISSION=false
BACKEND_API_URL=

# ----------------------------------------------------------
# Generation Settings
# ----------------------------------------------------------
# Max abilities per single generation batch
MAX_ABILITIES_PER_BATCH=20

# ----------------------------------------------------------
# Logging
# ----------------------------------------------------------
# Options: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
